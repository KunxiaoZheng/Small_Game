.title {
  width: 100%;
  position: absolute;
  top: 0;
  font-weight: bold;
  text-align: center;
}
canvas {
  width: 100%;
  height: 100%;
}
.healthBar {
  width: 200rpx;
  height: 30px;
  line-height: 30px;
  text-align: center;
  position: absolute;
  top: 30px;
  border: 1px solid tomato;
  border-radius: 5px;
  overflow: hidden;
}
.healthBar_bar {
  position: relative;
  height: 100%;
  width: 100%;
  background-color: tomato;
  top: -30px;
  z-index: -1;
  transition: width 0.5s ease;
}
/* pages/training/training.wxss */

page {
  height: 100%;
  width: 100%;
}

canvas {
  height: 400rpx;
  width: 100%;
}

.nav {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid rgb(220, 220, 220);
}

.nav_btn {
  font-size: 50rpx;
  color: black;
  transition: color 0.5s ease;
}

.nav_btn.selected {
  color: tomato;
}

.panel {
  width: 100%;
  height: calc(100% - 500rpx);
  display: flex;
  justify-content: center;
  align-items: center;
}

.panel_data {
  height: 80%;
  width: 80%;
  display: flex;
  font-size: 40rpx;
  border: 1px solid rgb(230, 230, 230);
  box-sizing: border-box;
  border-radius: 20px;
}

.panel_data_left, .panel_data_right {
  width: 50%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}

.panel_data_stat_left::after {
  content: "->";
  position: absolute;
  top: calc(50% - 40rpx);
  right: 0rpx;
}

.data {
  width: 200rpx;
  height: 80rpx;
  line-height: 80rpx;
  text-align: left;
}

.panel_data_stat_right .data {
  width: 260rpx;
}

.panel_data_left {
  padding-left: 30px;
  box-sizing: border-box;
}

.gold {
  position: relative;
}

.gold::after {
  content: "/分钟";
  width: 100%;
  display: inline-block;
  position: absolute;
  top: 40rpx;
  left: 40rpx;
  text-align: right;
  font-size: 30rpx;
}

.btn {
  height: 80rpx;
  width: 150rpx;
  line-height: 80rpx;
  text-align: center;
  position: fixed;
  bottom: 20rpx;
  border: 1px solid rgb(230, 230, 230);
  background-color: white;
  border-radius: 10px;
}